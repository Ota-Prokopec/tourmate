{
	"extends": "../../packages/tsconfig/base.json",
	"compilerOptions": {
		"outDir": "dist",
		"rootDir": "src",
		"typeRoots": ["../../global.d.ts"],
		"lib": ["ES2022"],
		"target": "ES2022",
		"declaration": false,
		"declarationMap": false,
		"strict": true,
		"noUncheckedIndexedAccess": true
	},

	"include": [
		"src/**/*.d.ts",
		"src/**/*.ts",
		"src/**/*.js",
		"../../global.d.ts",
		"../../tsReset.d.ts"
	],
	"exclude": ["node_modules", "dist"]
}
