{
	"compilerOptions": {
		"target": "ES6",
		"module": "CommonJS",
		"lib": ["es6"],
		"declaration": true,
		"strict": true,
		"outDir": "dist",
		"rootDir": "src",
		"allowJs": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"sourceMap": true
	},
	"include": ["src/**/*.d.ts", "src/**/*.ts", "src/**/*.js"],
	"exclude": ["node_modules", "dist"]
}
