{
	"name": "api",
	"main": "src/index.ts",
	"license": "MIT",
	"types": "src/index.ts",
	"scripts": {
		"dev": "console-ninja nodemon -w *.ts -e ts -x ts-node --files -H -T src/index.ts",
		"prebuild": "yarn generate-scalarTypes-barrels && yarn generate-schema-barrels && yarn generate-resolvers-barrels && yarn generate-graphql-schema",
		"build": "tsc --build",
		"generate-graphql-schema": "ts-node  ./src/schema.ts",
		"generate-schema-barrels": "barrelsby --delete --exportDefault --singleQuotes --directory ./src/schema",
		"generate-resolvers-barrels": "barrelsby --delete --exportDefault --singleQuotes --directory ./src/resolvers",
		"generate-scalarTypes-barrels": "barrelsby --delete --exportDefault --singleQuotes --directory ./src/lib/scalarTypes"
	},
	"dependencies": {
		"@apollo/server": "^4.9.3",
		"@app/appwrite-nexus": "*",
		"@app/appwrite-ssr": "*",
		"@app/appwrite-ssr-experiences": "*",
		"@app/experience-settings": "*",
		"@app/appwrite-ssr-experiences-graphql": "*",
		"@app/experience-database-server-graphql": "*",
		"@app/user-database-server-graphql": "*",
		"@app/appwrite-permissions": "*",
		"@types/cookie-parser": "^1.4.3",
		"apollo-server": "^3.12.1",
		"apollo-server-express": "^3.12.1",
		"appwrite": "^12.0.0",
		"cookie-parser": "^1.4.6",
		"cors": "^2.8.5",
		"express": "^4.18.2",
		"graphql": "^16.8.0",
		"graphql-scalars": "^1.22.2",
		"http-server": "^14.1.1",
		"lodash": "^4.17.21",
		"log-ninja": "^2.0.4",
		"nexus": "^1.3.0",
		"tsconfig-paths": "^4.2.0",
		"vite": "^4.4.9",
		"vite-express": "^0.10.0",
		"vite-node": "^0.34.3",
		"vite-plugin-commonjs": "^0.9.0",
		"vite-plugin-node": "^3.0.2"
	},
	"devDependencies": {
		"@rollup/plugin-commonjs": "^25.0.4",
		"@types/express": "^4.17.17",
		"@types/http-server": "^0.12.1",
		"barrelsby": "^2.8.0",
		"nodemon": "^3.0.1",
		"ts-node": "^10.9.1",
		"ts-node-dev": "^2.0.0",
		"typescript": "^5.2.2"
	}
}
