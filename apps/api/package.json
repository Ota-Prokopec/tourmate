{
	"name": "api",
	"version": "1.0.0",
	"license": "MIT",
	"main": "src/index.ts",
	"scripts": {
		"dev": "console-ninja nodemon -w *.ts -e ts -x ts-node --files -H -T src/index.ts",
		"prebuild": "yarn barrelsby && yarn generate-graphql-schema",
		"build": "tsc -build",
		"generate-graphql-schema": "ts-node  ./src/schema.ts",
		"generate-schema-barrels": "barrelsby --delete --exportDefault --singleQuotes --directory ./src/schema",
		"generate-resolvers-barrels": "barrelsby --delete --exportDefault --singleQuotes --directory ./src/resolvers",
		"generate-types-barrels": "barrelsby --delete --exportDefault --singleQuotes --directory ./src/lib/types/",
		"generate-arguments": "barrelsby --delete  --singleQuotes --exportDefault --directory ./src/arguments",
		"generate-database-experiences-monuments-barrels": "barrelsby --delete  --singleQuotes --directory ./src/lib/database/experiences-monuments",
		"generate-database-barrels": "barrelsby --delete  --singleQuotes --directory ./src/lib/database/",
		"barrelsby": "yarn generate-types-barrels && yarn generate-schema-barrels && yarn generate-resolvers-barrels && yarn generate-database-experiences-monuments-barrels && yarn generate-arguments",
		"start": "node --experimental-modules ./dist/esm/index.js",
		"preview": ""
	},
	"dependencies": {
		"@app/appwrite-permissions": "*",
		"@app/appwrite-ssr-graphql": "*",
		"@app/cloudinary-server": "*",
		"@app/firebase-server": "*",
		"@app/settings": "*",
		"@app/utils": "*",
		"@types/cookie-parser": "^1.4.3",
		"apollo-server-express": "^3.12.1",
		"appwrite": "^13.0.0",
		"cloudinary": "^1.40.0",
		"cookie-parser": "^1.4.6",
		"cors": "^2.8.5",
		"express": "^4.18.2",
		"firebase-admin": "12.0.0",
		"graphql": "^16.8.0",
		"graphql-scalars": "^1.22.2",
		"lodash": "^4.17.21",
		"nexus": "1.3.0",
		"node-appwrite": "^11.0.0",
		"tsconfig": "*",
		"vite-plugin-node": "^3.0.2"
	},
	"devDependencies": {
		"@rollup/plugin-commonjs": "^25.0.4",
		"@rollup/plugin-graphql": "^2.0.4",
		"@rollup/plugin-typescript": "^11.1.5",
		"@types/express": "^4.17.17",
		"@types/http-server": "^0.12.1",
		"barrelsby": "^2.8.0",
		"nodemon": "2.0.22",
		"ts-node": "^10.9.1",
		"ts-node-dev": "^2.0.0",
		"type-fest": "^4.6.0",
		"typescript": "^5.3.2",
		"vitest": "^0.34.6"
	}
}
